<Window x:Class="ACBEO_TrainingsTool_NEW_WPF.WindowCreateShowSwissQR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACBEO_TrainingsTool_NEW_WPF"
        mc:Ignorable="d"
        Title="WindowCreateShowSwissQR" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        
        <Label Content="Swiss QR Bill" HorizontalAlignment="Left" Margin="20,16,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Image x:Name="billImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,60,20,50"/>
        <Button x:Name="buttonClose" Content="CLOSE" HorizontalAlignment="Right" Margin="0,0,20,20" 
                VerticalAlignment="Bottom" Padding="10,2" Click="buttonClose_Click">
        </Button>
    </Grid>
</Window>
